	box-shadow-size: 3, 3;
}
.settingsSlideWrapper {
	dimensions: 184, 16;
	//background-color: red;
	//background-color-alpha: 0.1;
	margin-left: 2;
	margin-top: 2;
}
.settingsSlideBox {
	//position: relative;
	dimensions: 158, 12;
	//background-color: red;
	//background-color-alpha: 0.2;
	margin-top: 2;
	margin-bottom: 2;

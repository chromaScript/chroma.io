	border-bottom: 2;
}
.percentDragWrapper {
	dimensions: 46, 16;
	float: right;
	margin-right: 4;
	border-right: 2;
	//background-color: red;
	//background-color-alpha: 0.1;
}

.sliderTextWrapper {
	float: left;
	height: 16;
	min-width: 4;
	overflow-X: auto;
	//background-color: green;
	//background-color-alpha: 0.2;
}

.bshudCheckWrapper {
	float: left;
	dimensions: 14, 14;
	margin-top: 1;
	margin-right: 4;
	border-left: 2;
	border-right: 4;
	background-color: $darkGrey$;
}

.bshudCheckBox {
	dimensions: 10, 10;
	margin-top: 2;
	margin-left: 2;
	background-color: $lightGrey$;
}

.bshudText {
	min-width: 4;
	min-height: 6;
	margin-top: 1;
	margin-left: 3;
	margin-right: 1;
	border-left: 10;
